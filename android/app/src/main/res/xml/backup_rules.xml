<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include user preferences and physics calculation history -->
    <include domain="sharedpref" path="physics_results"/>
    <include domain="sharedpref" path="user_preferences"/>
    <include domain="sharedpref" path="calculation_history"/>
    
    <!-- Exclude device-specific and temporary data -->
    <exclude domain="sharedpref" path="benchmark_data"/>
    <exclude domain="sharedpref" path="system_metrics"/>
    <exclude domain="sharedpref" path="performance_cache"/>
    <exclude domain="sharedpref" path="device_info"/>
    
    <!-- Exclude cache directories -->
    <exclude domain="file" path="cache"/>
    <exclude domain="file" path="code_cache"/>
</full-backup-content>
